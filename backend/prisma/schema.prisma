generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Wallet {
  id        String   @id @map("_id") @default(auto()) @db.ObjectId
  address   String   @unique
  balance   String
  email     String?
  createdAt DateTime @default(now())
}

model Transaction {
  id        String   @id @map("_id") @default(auto()) @db.ObjectId
  from      String
  to        String
  amount    String
  amountWei String
  usdAmount String?
  timestamp DateTime @default(now())
  signature String
}
